<form action="{{ action|default('') }}" method="POST" class="fos_user_resetting_request text-left">
    <div class="form">
        <div id="username-field" class="field-wrapper input">
            <label class="form-control-label required" for="username">{{ 'label.username_or_email'|trans }}</label>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
            <input type="text" id="username" name="username" class="form-control" required="required" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">{{ _resetting_request_label }}</button>
        </div>
    </div>
</form>